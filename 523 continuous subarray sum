#include <vector>
#include <unordered_map>

class Solution {
public:
    bool checkSubarraySum(std::vector<int>& nums, int k) {
        std::unordered_map<int, int> modMap;
        modMap[0] = -1; // to handle the case when the subarray starts from index 0
        
        int prefixSum = 0;
        
        for (int i = 0; i < nums.size(); ++i) {
            prefixSum += nums[i];
            int mod = k == 0 ? prefixSum : prefixSum % k;
            
            if (modMap.find(mod) != modMap.end()) {
                if (i - modMap[mod] >= 2) {
                    return true;
                }
            } else {
                modMap[mod] = i;
            }
        }
        
        return false;
    }
};
