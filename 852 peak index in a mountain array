class Solution:
    def peakIndexInMountainArray(self, arr: List[int]) -> int:
        left, right = 0, len(arr) - 1
        
        while left < right:
            mid = (left + right) // 2
            
            if arr[mid] < arr[mid + 1]:
                # We are on the increasing slope → peak is on the right
                left = mid + 1
            else:
                # We are on the decreasing slope → peak is mid or to the left
                right = mid
        
        return left
